<article ng-controller='InviteCtrl' class='invite-page'>

  <div class='nav-bar-container'>
    <div class='nav-bar'>
      <span class='left-button' ng-click='toggleDashboard()'><i class='fa fa-bars'></i></span>
      <span class='title'>Invite Friends</span>
    </div>
  </div>

  <section class='description'>
    <div class='header'>Share Nommit</div>

    <p>Spread the love! Help organizations fundraise by inviting friends to Nommit</p>
  </section>

  <section class='invite-button'>
    <button class='button button-primary' ng-click='inviteFriends()'>Invite Friends</button>
  </section>

  <section class='social'>
    <div class='horizontal-rule'></div>
    <div class='share-your-code'>Share Nommit</div>
    <ul class='share-buttons'>
      <span class='share facebook' ng-click='shareOnFacebook()'><i class='fa fa-facebook'></i></span>
      <span class='share messenger' ng-click='shareOnMessenger()'><i class='fb-messenger'></i></span>
      <span class='share twitter' ng-click='shareOnTwitter()'><i class='fa fa-twitter'></i></span>
    </ul>
  </section>

</article>
